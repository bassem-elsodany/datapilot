{
  "name": "datapilot-dashboard",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:electron": "tsc -p electron/tsconfig.json && node -e \"require('fs').copyFileSync('electron/config.json', 'dist-electron/electron/config.json')\"",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "wait-on tcp:5178 && cross-env IS_DEV=true electron . --max-old-space-size=2048",
    "electron:dev": "concurrently \"npm run dev\" \"npm run electron\"",
    "electron:build": "npm run build:electron && npm run build && node scripts/install-python-deps.js && electron-builder",
    "electron:preview": "npm run build:electron && npm run build && electron .",
    "package": "node scripts/build-package.js",
    "package:cross-platform": "node scripts/build-cross-platform.js",
    "docker:build": "docker-compose build",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "generate:translations": "node scripts/generate-translations-sql.js"
  },
  "dependencies": {
    "@mantine/core": "^8.2.5",
    "@mantine/dates": "^8.2.5",
    "@mantine/form": "^8.2.5",
    "@mantine/hooks": "^8.2.5",
    "@mantine/modals": "^8.2.5",
    "@mantine/notifications": "^8.2.5",
    "@mantine/nprogress": "^8.2.5",
    "@mantine/spotlight": "^8.2.5",
    "@monaco-editor/react": "^4.6.0",
    "@salesforce/apex-node": "^8.2.8",
    "@salesforce/core": "^8.19.1",
    "@salesforce/source-deploy-retrieve": "^12.22.6",
    "@tabler/icons-react": "^3.34.1",
    "@types/better-sqlite3": "^7.6.13",
    "axios": "^1.11.0",
    "better-sqlite3": "^12.2.0",
    "chevrotain": "^11.0.0",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.18",
    "electron-store": "^10.1.0",
    "immer": "^10.1.3",
    "jspdf": "^2.5.2",
    "keytar": "^7.9.0",
    "mantine-contextmenu": "^8.2.0",
    "mantine-datatable": "^8.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@electron/asar": "^4.0.1",
    "@eslint/js": "^9.33.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^37.3.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "fs-extra": "^11.3.1",
    "globals": "^16.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "wait-on": "^8.0.4"
  },
  "main": "dist-electron/electron/main.js",
  "build": {
    "appId": "com.datapilot.app",
    "productName": "DataPilot",
    "directories": {
      "output": "release"
    },
    "compression": "maximum",
    "removePackageScripts": true,
    "removePackageKeywords": true,
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "!node_modules/**/__pycache__/**/*",
      "!node_modules/**/*.pyc",
      "!node_modules/**/*.pyo",
      "!node_modules/**/*.pyd"
    ],
    "asarUnpack": [
      "dist-electron/app.asar.unpacked/python-backend"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "src/assets/images/datapilot.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/images/datapilot.png",
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/images/datapilot.png",
      "category": "Development"
    }
  }
}
