# DataPilot Dashboard Environment Configuration
# Copy this file to .env and modify as needed

# ============================================================================
# API CONFIGURATION
# ============================================================================

# Backend API base URL (default: http://localhost:8000)
VITE_API_BASE_URL=http://localhost:8000

# API timeout in milliseconds (default: 30000)
VITE_API_TIMEOUT=30000

# API retry attempts (default: 3)
VITE_API_RETRIES=3

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Application name (default: DataPilot)
VITE_APP_NAME=DataPilot

# Application version (default: 1.0.0)
VITE_APP_VERSION=1.0.0

# Application description
VITE_APP_DESCRIPTION=Your AI pilot for Salesforce data navigation

# Application author
VITE_APP_AUTHOR=DataPilot Team

# Application homepage URL
VITE_APP_HOMEPAGE=https://github.com/bassem-elsodany

# ============================================================================
# SALESFORCE CONFIGURATION
# ============================================================================

# Default Salesforce login URL (default: https://login.salesforce.com)
VITE_SALESFORCE_LOGIN_URL=https://login.salesforce.com

# Sandbox login URL (default: https://test.salesforce.com)
VITE_SALESFORCE_SANDBOX_URL=https://test.salesforce.com

# Salesforce API version (default: 58.0)
VITE_SALESFORCE_API_VERSION=58.0

# Salesforce API timeout in milliseconds (default: 30000)
VITE_SALESFORCE_TIMEOUT=30000

# Salesforce API max retries (default: 3)
VITE_SALESFORCE_MAX_RETRIES=3

# ============================================================================
# UI CONFIGURATION
# ============================================================================

# Default font size (small, medium, large, xlarge)
VITE_DEFAULT_FONT_SIZE=medium

# Enable search feature (true/false)
VITE_ENABLE_SEARCH=true

# Enable auto-save feature (true/false)
VITE_ENABLE_AUTO_SAVE=true

# Enable session persistence (true/false)
VITE_ENABLE_SESSION_PERSISTENCE=true

# Enable schema caching (true/false)
VITE_ENABLE_SCHEMA_CACHING=true

# Maximum saved sessions (default: 50)
VITE_MAX_SAVED_SESSIONS=50

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Enable debug logging (true/false)
VITE_ENABLE_DEBUG_LOGGING=true

# Enable test data (true/false)
VITE_ENABLE_TEST_DATA=false

# Mock API delay in milliseconds (default: 1000)
VITE_MOCK_API_DELAY=1000

# ============================================================================
# INTERNATIONALIZATION
# ============================================================================

# Default locale (en, es, fr, de, ja, zh)
VITE_DEFAULT_LOCALE=en

# Supported locales (comma-separated)
VITE_SUPPORTED_LOCALES=en,fr

# Fallback locale
VITE_FALLBACK_LOCALE=en

# Date format (short, long)
VITE_DATE_FORMAT=short

# Number format (decimal, currency)
VITE_NUMBER_FORMAT=decimal

# ============================================================================
# THEME CONFIGURATION
# ============================================================================

# Primary color (hex)
VITE_THEME_PRIMARY=#667eea

# Secondary color (hex)
VITE_THEME_SECONDARY=#764ba2

# Accent color (hex)
VITE_THEME_ACCENT=#f093fb

# Background color (hex)
VITE_THEME_BACKGROUND=#ffffff

# Surface color (hex)
VITE_THEME_SURFACE=#f7fafc

# Error color (hex)
VITE_THEME_ERROR=#e53e3e

# Warning color (hex)
VITE_THEME_WARNING=#f59e0b

# Success color (hex)
VITE_THEME_SUCCESS=#38a169

# ============================================================================
# STORAGE CONFIGURATION
# ============================================================================

# Connection storage key
VITE_STORAGE_CONNECTION_KEY=datapilot_connections

# Master key hash storage key
VITE_STORAGE_MASTER_KEY_HASH=datapilot_master_key_hash

# Font size storage key
VITE_STORAGE_FONT_SIZE_KEY=schemaTreeFontSize

# Test data prefixes (comma-separated)
VITE_STORAGE_TEST_DATA_PREFIXES=datapilot_test,datapilot_mock,datapilot_demo