# DataPilot Dashboard Docker Environment Configuration
# This file contains Docker-specific environment variables for the dashboard

# ============================================================================
# API CONFIGURATION (Docker overrides)
# ============================================================================

# Backend API base URL - points to backend service in Docker
# For Docker: use internal service name (backend:8000)
# For external access: use localhost:8001
VITE_API_BASE_URL=http://localhost:8001

# API timeout in milliseconds
VITE_API_TIMEOUT=30000

# API retry attempts
VITE_API_RETRIES=3

# ============================================================================
# APPLICATION SETTINGS (Docker overrides)
# ============================================================================

# Application name
VITE_APP_NAME=DataPilot

# Application version
VITE_APP_VERSION=1.0.0

# Application description
VITE_APP_DESCRIPTION=Your AI pilot for Salesforce data navigation

# Application author
VITE_APP_AUTHOR=DataPilot Team

# Application homepage URL
VITE_APP_HOMEPAGE=https://github.com/bassem-elsodany

# ============================================================================
# SALESFORCE CONFIGURATION (Docker overrides)
# ============================================================================

# Default Salesforce login URL
VITE_SALESFORCE_LOGIN_URL=https://login.salesforce.com

# Sandbox login URL
VITE_SALESFORCE_SANDBOX_URL=https://test.salesforce.com

# Salesforce API version
VITE_SALESFORCE_API_VERSION=58.0

# Salesforce API timeout in milliseconds
VITE_SALESFORCE_TIMEOUT=30000

# Salesforce API max retries
VITE_SALESFORCE_MAX_RETRIES=3

# ============================================================================
# UI CONFIGURATION (Docker overrides)
# ============================================================================

# Default font size
VITE_DEFAULT_FONT_SIZE=medium

# Enable search feature
VITE_ENABLE_SEARCH=true

# Enable auto-save feature
VITE_ENABLE_AUTO_SAVE=true

# Enable session persistence
VITE_ENABLE_SESSION_PERSISTENCE=true

# Enable schema caching
VITE_ENABLE_SCHEMA_CACHING=true

# Maximum saved sessions
VITE_MAX_SAVED_SESSIONS=50

# ============================================================================
# DEVELOPMENT SETTINGS (Docker overrides)
# ============================================================================

# Enable debug logging
VITE_ENABLE_DEBUG_LOGGING=false

# Enable test data
VITE_ENABLE_TEST_DATA=false

# Mock API delay in milliseconds
VITE_MOCK_API_DELAY=1000

# ============================================================================
# INTERNATIONALIZATION (Docker overrides)
# ============================================================================

# Default locale
VITE_DEFAULT_LOCALE=en

# Supported locales
VITE_SUPPORTED_LOCALES=en,fr

# Fallback locale
VITE_FALLBACK_LOCALE=en

# Date format
VITE_DATE_FORMAT=short

# Number format
VITE_NUMBER_FORMAT=decimal

# ============================================================================
# THEME CONFIGURATION (Docker overrides)
# ============================================================================

# Primary color
VITE_THEME_PRIMARY=#667eea

# Secondary color
VITE_THEME_SECONDARY=#764ba2

# Accent color
VITE_THEME_ACCENT=#f093fb

# Background color
VITE_THEME_BACKGROUND=#ffffff

# Surface color
VITE_THEME_SURFACE=#f7fafc

# Error color
VITE_THEME_ERROR=#e53e3e

# Warning color
VITE_THEME_WARNING=#f59e0b

# Success color
VITE_THEME_SUCCESS=#38a169

# ============================================================================
# STORAGE CONFIGURATION (Docker overrides)
# ============================================================================

# Connection storage key
VITE_STORAGE_CONNECTION_KEY=datapilot_connections

# Master key hash storage key
VITE_STORAGE_MASTER_KEY_HASH=datapilot_master_key_hash

# Font size storage key
VITE_STORAGE_FONT_SIZE_KEY=schemaTreeFontSize

# Test data prefixes
VITE_STORAGE_TEST_DATA_PREFIXES=datapilot_test,datapilot_mock,datapilot_demo
