.PHONY: install install-dev run test clean lock sync dev format lint check deps update langgraph

# DataPilot Backend Development Commands
# =====================================

# Install production dependencies
install:
	@echo "ğŸš€ Installing DataPilot Backend dependencies..."
	uv sync --no-dev

# Install all dependencies (including dev)
install-dev:
	@echo "ğŸš€ Installing DataPilot Backend with dev dependencies..."
	uv sync

# Install from pyproject.toml (editable install)
install-pyproject:
	@echo "ğŸš€ Installing DataPilot Backend in editable mode..."
	uv pip install -e .

# Install from lock file
sync:
	@echo "ğŸ”„ Syncing dependencies from lock file..."
	uv sync

# Generate/update lock file
lock:
	@echo "ğŸ”’ Updating lock file..."
	uv lock

# Run the application (development mode)
run:
	@echo "ğŸš€ Starting DataPilot Backend..."
	uv run python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000

# Run the application (production mode)
run-prod:
	@echo "ğŸš€ Starting DataPilot Backend (Production)..."
	uv run python -m uvicorn app.main:app --host 0.0.0.0 --port 8000

# Run tests
test:
	@echo "ğŸ§ª Running DataPilot Backend tests..."
	uv run pytest

# Run tests with coverage
test-cov:
	@echo "ğŸ§ª Running tests with coverage..."
	uv run pytest --cov=app --cov-report=html --cov-report=term

# Format code with Black
format:
	@echo "ğŸ¨ Formatting code with Black..."
	uv run black .

# Lint code with Ruff
lint:
	@echo "ğŸ” Linting code with Ruff..."
	uv run ruff check .

# Lint and fix code
lint-fix:
	@echo "ğŸ”§ Linting and fixing code..."
	uv run ruff check --fix .

# Run all checks (format, lint, test)
check: format lint test
	@echo "âœ… All checks passed!"

# Clean virtual environment
clean:
	@echo "ğŸ§¹ Cleaning virtual environment..."
	rm -rf .venv

# Create new virtual environment
venv:
	@echo "ğŸ Creating new virtual environment..."
	uv venv

# Show dependency tree
deps:
	@echo "ğŸ“¦ Dependency tree:"
	uv tree

# Update dependencies
update:
	@echo "â¬†ï¸ Updating dependencies..."
	uv lock --upgrade
	uv sync

# LangGraph specific commands
langgraph-dev:
	@echo "ğŸ§  Starting LangGraph development server..."
	uv run langgraph dev

# LangGraph deploy
langgraph-deploy:
	@echo "ğŸš€ Deploying LangGraph workflow..."
	uv run langgraph deploy

# Show help
help:
	@echo "DataPilot Backend Development Commands"
	@echo "====================================="
	@echo ""
	@echo "Installation:"
	@echo "  install        Install production dependencies"
	@echo "  install-dev    Install with development dependencies"
	@echo "  sync           Sync from lock file"
	@echo ""
	@echo "Development:"
	@echo "  run            Start development server"
	@echo "  run-prod       Start production server"
	@echo "  dev            Alias for run"
	@echo ""
	@echo "Testing:"
	@echo "  test           Run tests"
	@echo "  test-cov       Run tests with coverage"
	@echo ""
	@echo "Code Quality:"
	@echo "  format         Format code with Black"
	@echo "  lint           Lint code with Ruff"
	@echo "  lint-fix       Lint and fix code"
	@echo "  check          Run all checks (format, lint, test)"
	@echo ""
	@echo "AI/ML:"
	@echo "  langgraph-dev  Start LangGraph development server"
	@echo "  langgraph-deploy Deploy LangGraph workflow"
	@echo ""
	@echo "Utilities:"
	@echo "  deps           Show dependency tree"
	@echo "  update         Update dependencies"
	@echo "  clean          Clean virtual environment"
	@echo "  venv           Create new virtual environment"
	@echo "  help           Show this help"

# Alias for run
dev: run
